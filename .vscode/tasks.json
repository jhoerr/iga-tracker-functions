{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "windows": {
                "command": "Get-ChildItem .\\ -include bin,obj -Recurse | foreach ($_) { remove-item $_.fullname -Force -Recurse }"
            },
            "osx": {
                "command": "find . -iname \"bin\" -o -iname \"obj\" | xargs rm -rf"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "windows": {
                "command": "dotnet build; copy local.settings.json bin/Debug/netcoreapp2.1"
            },
            "osx": {
                "command": "dotnet build && cp local.settings.json bin/Debug/netcoreapp2.1"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet restore",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish --configuration Release",
            "type": "shell",
            "dependsOn": "clean release",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/Functions"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start",
            "type": "shell",
            "dependsOn": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src/Functions/bin/Debug/netcoreapp2.1"
            },
            "command": "func host start",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "unit",
            "command": "dotnet test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/tests/Unit"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "integration",
            "command": "dotnet test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceFolder}/tests/Integration"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}